<h1> All articles</h1>
<p>
  <%= link_to 'Create New Article', new_article_path %>
</p>
<table>
  <th>Title</th>
  <th>Author</th>
  <th>Description</th>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'See Article', article_path(article) %></td>
      <td><%= link_to 'Remove Article', article_path(article), method: 'delete', data: { confirm: "Are You Sure?" } %></td>
    </tr>
  <% end %>
</table>
